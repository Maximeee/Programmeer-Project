<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/house"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="23dp"
        android:id="@+id/nobutton"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/floppydisk"
        android:id="@+id/favorites"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/nobutton"
        android:layout_alignStart="@+id/nobutton"
        android:layout_marginBottom="16dp"
        android:layout_alignRight="@+id/nobutton"
        android:layout_alignEnd="@+id/nobutton" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/food1"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:id="@+id/yesbutton"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/nobutton"
        android:layout_toEndOf="@+id/nobutton" />

    <TextView
        android:text="Search for recipes using products you have in house"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/nobutton"
        android:layout_toEndOf="@+id/nobutton"
        android:id="@+id/textView"
        android:layout_alignTop="@+id/nobutton"
        android:textSize="30dp"/>

    <TextView
        android:text="Search for recipes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/yesbutton"
        android:layout_alignLeft="@+id/nobutton"
        android:layout_alignStart="@+id/nobutton"
        android:id="@+id/textView2"
        android:textSize="30dp"
        android:layout_toLeftOf="@+id/yesbutton"
        android:layout_toStartOf="@+id/yesbutton" />

    <TextView
        android:text="Favorites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/favorites"
        android:layout_alignLeft="@+id/yesbutton"
        android:layout_alignStart="@+id/yesbutton"
        android:id="@+id/textView3"
        android:textSize="30dp" />

    <Button
        android:text="Sign Out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/favorites"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/SignOut" />

</RelativeLayout>